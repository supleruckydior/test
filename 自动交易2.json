            pcall(function()
                tradeInviteText =
                    PlayerGui.GUI['\229\159\186\231\161\128']['\229\128\146\232\174\161\230\151\182\230\161\134']['\232\131\140\230\153\175']['\229\134\133\229\174\185'].Text
            end)

            local invitingPlayer =
                tradeInviteText:match('(.+) has invited you to trade')

            if invitingPlayer then
                -- 触发交易请求
                pcall(function()
                    requestTradeEvent:FireServer()
                end)

                wait(1.1)

                -- 设置交易价格
                local core = 0
                pcall(function()
                    core = tonumber(
                        PlayerGui.GUI['\228\186\140\231\186\167\231\149\140\233\157\162']['\228\186\164\230\152\147']['\228\186\164\230\152\147\231\149\140\233\157\162']['\230\136\145\231\154\132\232\131\140\229\140\133']['\232\180\167\229\184\129']['\231\190\189\230\160\184']['\229\128\188'].Text
                    ) or 0
                end)

                pcall(function()
                    tradePriceEvent:FireServer(core)
                end)

                -- 根据模式执行交易
                if tradeMode == 'elixir' or tradeMode == 'both' then
                    if elixirData and elixirData['背包'] then
                        for slot, item in pairs(elixirData['背包']) do
                            if type(item) == 'table' then
                                local itemIndex = item['索引']
                                    or item.Index
                                    or item.id
                                if itemIndex then
                                    tradeElixir(itemIndex)
                                end
                            end
                        end
                    end
                end

                if tradeMode == "egg" or tradeMode == "both" then
                    if eggData and eggData['背包'] then
                        print("开始交易蛋，背包数量:", #eggData['背包'])
                        for _, egg in ipairs(eggData['背包']) do
                            if type(egg) == "table" then
                                local eggIndex = egg['索引']
                                    or egg.Index
                                    or egg.id
                                if eggIndex then
                                    print(eggIndex)
                                    tradeEgg(eggIndex)
                                end
                            end
                        end
                    else
                        print("没有蛋数据或背包为空")
                    end
                end

                if tradeMode == 'tree' or tradeMode == 'both' then
                    if treeData and treeData['背包'] then
                        for slot, tree in pairs(treeData['背包']) do
                            if type(tree) == 'table' then
                                local treeIndex = tree['索引']
                                    or tree.Index
                                    or tree.id
                                if treeIndex then
                                    tradetree(treeIndex)
                                end
                            end
                        end
                    end
                end
                if tradeMode == 'rune' or tradeMode == 'both' then
                    if runeData and runeData['背包'] then
                        for slot, rune in pairs(runeData['背包']) do
                            if type(rune) == 'table' then
                                local runeIndex = rune['索引']
                                    or rune.Index
                                    or rune.id
                                if runeIndex then
                                    traderune(runeIndex)
                                end
                            end
                        end
                    end
                end

                if tradeMode == 'armor' or tradeMode == 'both' then
                    -- 如果没有同步事件，在交易时触发切换装备组事件刷新数据（确保最新）
                    if not armorSyncEvent and switchArmorSetEvent then
                        pcall(function()
                            switchArmorSetEvent:FireServer(1)
                        end)
                        wait(0.5) -- 等待服务器下发数据
                    elseif not armorSyncEvent then
                        armorData = findArmorBackpackData()
                    end
                    
                    -- 处理翅膀数据（兼容同步事件和内存搜索两种结构）
                    local wingsToTrade = armorData
                    if armorData and type(armorData) == 'table' then
                        -- 如果数据包含"背包"键（同步事件结构），使用背包数据
                        if armorData['\232\131\140\229\140\133'] or armorData['背包'] then
                            wingsToTrade = armorData['\232\131\140\229\140\133'] or armorData['背包']
                        end
                    end
                    
                    if wingsToTrade then
                        local wingCount = 0
                        local processedCount = 0
                        for _, item in pairs(wingsToTrade) do
                            processedCount = processedCount + 1
                            if type(item) == 'table' then
                                -- 检查是否是翅膀（有翅膀ID字段）
                                local isWing = item['翅膀ID'] 
                                    or (type(item.wingId) == 'number' and item.wingId > 0)
                                    or item.wingId
                                
                                if isWing then
                                    local itemIndex = item['索引']
                                        or item.Index
                                        or item.id
                                    if itemIndex then
                                        print('交易翅膀，索引:', itemIndex)
                                        tradeArmor(itemIndex)
                                        wingCount = wingCount + 1
                                    end
                                end
                            end
                        end
                        if wingCount > 0 then
                            print('翅膀交易完成，共交易', wingCount, '个')
                        else
                            print('警告: 未找到可交易的翅膀，处理了', processedCount, '个物品')
                        end
                    else
                        print('警告: 没有翅膀数据可交易')
                    end
                end
                -- 确认交易
                if waitForTradeUI() then
                    wait(1)
                    pcall(function()
                        confirmTradeEvent:FireServer(true)
                        print('交易已确认')
                    end)
                end

                wait(1)
            else
                wait(0.5)
            end
        else
            wait(0.1)
        end
    end
end)()


